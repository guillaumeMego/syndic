{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
    
    <h1 class="mt-4">
        Ajout d'un Habitant
    </h1>
    {{ form_start(form) }}
    <div class="form-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="form-group">
            {{ form_label(form.prenom) }}
            {{ form_widget(form.prenom) }}
            <div class="form-error">{{ form_errors(form.prenom) }}</div>
        </div>
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            <div class="form-error">{{ form_errors(form.nom) }}</div>
        </div>
        <div class="form-group">
            {{ form_label(form.mail) }}
            {{ form_widget(form.mail) }}
            <div class="form-error">{{ form_errors(form.mdp) }}</div>
        </div>
        <div class="form-group">
            {{ form_label(form.adresse) }}
            {{ form_widget(form.adresse) }}
            <div class="form-error">{{ form_errors(form.adresse) }}</div>
        </div>
        <div class="form-group">
            {{ form_widget(form.mdp) }}
            <div class="form-error">
                {{ form_errors(form.mdp) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_row(form.submit)}}
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}