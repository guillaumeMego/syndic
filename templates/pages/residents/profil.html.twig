{% extends 'base.html.twig' %}

{% block title %}Syndic - edition profil{% endblock %}

{% block body %}
<div class="container">
    <h2 class="display-4 mt-3 mb-3 text-secondary">Edition du profil</h2>
    <hr>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-2">
        {{ message }}
    </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
    <div class="alert alert-danger mt-2">
        {{ message }}
    </div>
    {% endfor %}
    <a class="btn btn-outline-primary me-2" href="{{ path('app_edit_password', {'id': app.user.id}) }}">Modifier le mot
        de passe</a>
    {{ form_start(form) }}
    <div class="row col-12">
        <div class="col-6">
            {{ form_row(form.nom) }}
        </div>
        <div class="col-6">
            {{ form_row(form.prenom) }}
        </div>
        <div class="col-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-6">
            {{ form_row(form.telephone) }}
        </div>
        <div class="col-4">
            {{ form_row(form.batiment) }}
        </div>
        <div class="col-4">
            {{ form_row(form.etage) }}
        </div>
        <div class="col-4">
            {{ form_row(form.numero_appartement) }}
        </div>
        <div class="col-12">
            {{ form_row(form.imageFile) }}
        </div>

        <div class="col-4">
            {{ form_row(form.roles) }}
        </div>
        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary btn my-3 mb-5'}}) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}